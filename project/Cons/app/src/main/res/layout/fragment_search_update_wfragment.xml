<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back5"
    android:orientation="vertical"
    tools:context="com.example.ganesh.cons.SearchUpdateWfragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Search worker Details"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sworker"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:inputType="text"
        android:hint="Search Worker"
        android:textSize="15dp"
        style="@style/edittext_style"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
    android:id="@+id/wsearch"
    style="@style/button_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="55dp"
    android:layout_marginTop="35dp"
    android:text="Search"
        android:layout_marginStart="55dp"
        android:layout_below="@+id/sworker"
        android:layout_alignLeft="@+id/sworker"
        android:layout_alignStart="@+id/sworker" />

<Button
    android:id="@+id/wupdate"
    style="@style/button_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Update"
    android:layout_marginLeft="46dp"
    android:layout_marginStart="46dp"
    android:layout_alignBaseline="@+id/wsearch"
    android:layout_alignBottom="@+id/wsearch"
    android:layout_toRightOf="@+id/wsearch"
    android:layout_toEndOf="@+id/wsearch" />
</RelativeLayout>