<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    tools:context="com.example.ganesh.cons.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="audio"
                android:text="REGISTER"
                android:paddingLeft="20dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:textStyle="bold"
            android:text="PERSONAL INFORMATION"
            style="@style/edittext_style"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fname"
            android:hint="FIRST NAME"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:textSize="15dp"
            style="@style/edittext_style"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lname"
            android:hint="LAST NAME"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            style="@style/edittext_style"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:hint="ADDRESS"
            android:drawableLeft="@drawable/ic_adress"
            android:textSize="15dp"
            style="@style/edittext_style"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/City"
            style="@style/edittext_style"
            android:hint="CITY"
            android:inputType="text"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_location_black_24dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            style="@style/edittext_style"
            android:inputType="textEmailAddress"
            android:hint="EMAIL ID"
            android:drawableLeft="@drawable/ic_email"
            android:textSize="15dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phno"
            android:drawableLeft="@drawable/ic_contact"
            style="@style/edittext_style"
            android:inputType="phone"
            android:hint="CONTECT NO"
            android:textSize="15dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text9"
            style="@style/edittext_style"
            android:textStyle="bold"
            android:text="GENDER:"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="MALE"
                android:textSize="10dp"
                style="@style/edittext_style"
                android:layout_marginTop="10dp"
                android:textColor="#103f6f"
                android:id="@+id/radioMale"
                android:layout_below="@+id/gen"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="33dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEMALE"
                style="@style/edittext_style"
                android:textSize="10dp"
                android:id="@+id/radioFeMale"
                android:layout_below="@+id/text9"
                android:textColor="#103f6f"
                android:layout_marginLeft="105dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="10dp"
                android:checked="false" />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/edittext_style"
            android:id="@+id/text10"
            android:textStyle="bold"
            android:text="LOGIN INFORMATION"
            android:drawableLeft="@drawable/ic_dialpad_black_24dp"
            android:drawableRight="@drawable/ic_dialpad_black_24dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uname"
            android:drawableLeft="@drawable/ic_userl"
            android:hint="USER NAME"
            android:textSize="15dp"
            style="@style/edittext_style"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass1"
            android:inputType="textPassword"
            android:hint="PASSWORD"
            style="@style/edittext_style"
            android:drawableLeft="@drawable/ic_password"
            android:textSize="15dp"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass2"
            android:drawableLeft="@drawable/ic_lock"
            android:inputType="textPassword"
            android:hint="CONFORM PASSWORD"
            android:textSize="15dp"
            style="@style/edittext_style"
            android:layout_marginTop="10dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textSize="20dp"
                android:id="@+id/btn1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                style="@style/button_background"/>


            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="RESET"
                android:textSize="20dp"
                android:id="@+id/btn2"
                android:textStyle="bold"
                android:textColor="#000000"
                style="@style/button_background"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
